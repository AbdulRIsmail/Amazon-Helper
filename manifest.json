{
    "name": "Amazon Helper",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "./assets/images/amazon.png",
        "default_popup": "./assets/views/popup.html"
    },
    "permissions":[
        "activeTab",
        "contextMenus", 
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
        ],
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.co.uk/*", 
                "https://www.amazon.com/*"]
                ,
            "css": ["./assets/css/content.css"],
            "js": [
                "./assets/js/price.js"
            ]
        }
    ]
}